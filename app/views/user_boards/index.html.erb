<p id="notice"><%= notice %></p>

<h1>User Boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_boards.each do |user_board| %>
      <tr>
        <td><%= user_board.name %></td>
        <td><%= user_board.email %></td>
        <td><%= user_board.question %></td>
        <td><%= link_to 'Show', user_board %></td>
        <td><%= link_to 'Edit', edit_user_board_path(user_board) %></td>
        <td><%= link_to 'Destroy', user_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Board', new_user_board_path %>
