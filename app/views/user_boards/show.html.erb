<div class="nested_container">
  <%= link_to 'Back', root_path, class: 'links' %>
</div>
<p id="notice"><%= notice %></p>
<div class="nested_container">
  <div class="index_row clearfix">
    <p class="user_board_email"><%= @user_board.created_at %></p>
    <br/>
    <p class="user_board_name"><%= @user_board.name %></p>
    <% if @user_board.email.present? %>
      <p class="user_board_email"><%= @user_board.email %><span class="glyphicon glyphicon-send"></span></p>
      <%= mail_to @user_board.email, "Send Mail", class: 'show_links' %>
    <% end %>
    <p class="user_board_question"><%= @user_board.question %></p>
  </div>
  <% if admin_signed_in? %>
    <%= button_to "Complete", @user_board, method: :patch, data: {confirm: 'Are you sure?'}, class: 'complete_button' %>
  <% end %>
</div>
<div id="answers_wrapper">
  <% if admin_signed_in? %>
    <% unless @user_board.answers.empty? %>
      <div class="nested_container">
        <%= render @user_board.answers %>
      </div>
    <% end %>
    <div id="form">
      <%= render "answers/form" %>
    </div>
  <% end %>
</div>
